<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>Initialize</servlet-name>
    <servlet-class>DBsetup</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Initialize</servlet-name>
    <url-pattern>/init</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddEmployee</servlet-name>
    <servlet-class>AddEmployeeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddEmployee</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EditEmployee</servlet-name>
    <servlet-class>EditEmployeeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>EditEmployee</servlet-name>
    <url-pattern>/edit</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ViewEmployee</servlet-name>
    <servlet-class>ViewEmployeeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ViewEmployee</servlet-name>
    <url-pattern>/view</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteEmployee</servlet-name>
    <servlet-class>DeleteEmployeeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DeleteEmployee</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>

</web-app>
